# vi: set noexpandtab tabstop=4 softtabstop=4:
[alias]
	a = add
	af = add --force
	ai = add --interactive
	ap = add --patch
	au = add --update
	b = branch
	bl = branch --list
	bla = branch --list --all
	bll = branch --list --verbose
	blla = branch --list --verbose --all
	bmv = branch --move
	brm = branch --delete
	bus = branch --set-up-stream-to
	current = rev-parse --abbrev-ref HEAD
	cf = config
	cfl = config --list
	cfrm = config --unset
	cl = clone
	cl1 = clone --depth 1
	cm = commit --all --message
	cma = commit --amend
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	d = diff
	df = diff --name-only
	dfp = !git diff --name-only | xargs -I{} realpath "$(git rev-parse --show-toplevel)/{}"
	dt = difftool -y
	f = fetch
	fo = fetch origin
	fu = fetch upstream
	h = help
	l = log --oneline --decorate
	la = log --oneline --decorate --graph --all
	ll = log --stat
	pl = pull
	plo = pull origin
	plu = pull upstream
	ps = push
	pst = push --tags
	pso = push origin
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = git rebase -i
	r = remote
	ra = remote add
	rl = remote -v
	rs = remote show
	rmv = remote rename
	rrm = remote remove
	rus = remote set-url
# discard working directory and stated changes, reset to HEAD state
	rshh = reset --hard HEAD
# restore workspace from stated
	rst = restore
# restore stated from local repo, default --source=HEAD
	rsts = restore --staged
	sm = submodule
	smu = submodule update --init
	ss = status --show-stash
	ssl = status --short
	sh = stash
	shls = stash list
	shll = stash list --stat
	shps = stash push --include-untracked
	shpsa = stash push --include-untracked --all
	shpl = stash apply
	shrm = stash drop
	shrma = stash clear
	sw = switch
	t = tag
	tls = tag --list
	trm = tag -d
	w = worktree
	wa = worktree add
	wl = worktree list
	wmv = worktree move
	wp = worktree prune
	wrm = worktree remove
	wrp = worktree repare

