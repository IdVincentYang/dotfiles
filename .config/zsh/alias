################################################################################
# wgetsite
# wget args:
#   -c: --continue
#   -nc:--no-clobber
#   -k: --convert-links
#   -np:--no-parent
#   -r: --recursive
#   -p: --page-requisites
#   -e: --execute=COMMAND
#   -U: --user-agent=AGENT
#
#   --domains website.org
#   --restrict-file-names=windows
alias ,wgetsite="wget --random-wait -c -nc -k -np -r -p -e robots=off -U mozilla"

